<div class="admin-form">
  <div class="container">

    <div class="row">
      <div class="col-md-12">
        <!-- Widget starts -->
            <div class="widget worange">
              <!-- Widget head -->
              <div class="widget-head">
                <i class="icon-lock"></i> Polla Brasil 2014 - Ingreso 
              </div>

              <div class="widget-content">
                <div class="padd">
                  <!-- Login form -->
                  <%= form_for(:session, url: sessions_path, html: {class: 'form-horizontal'}) do |f|%>
                    <!-- Email -->
                    <div class="form-group">
                      <%= f.label :email, "Correo Electrónico", class: 'control-label col-lg-3'%>
                      <div class="col-lg-9">
                        <%= f.text_field :email, class: 'form-control'%>
                      </div>
                    </div>
                    <!-- Password -->
                    <div class="form-group">
                      <%= f.label :password, "Contraseña", class: 'control-label col-lg-3'%>
                      <div class="col-lg-9">
                        <%= f.password_field :password, class: 'form-control'%>
                      </div>
                    </div>
                    <!-- Remember me checkbox and sign in button -->
                    <div class="form-group">
					<div class="col-lg-9 col-lg-offset-3">
                      <div class="checkbox">
                        <label>
                          <input type="checkbox"> Recordar Usuario
                        </label>
						</div>
					</div>
					</div>
                        <div class="col-lg-9 col-lg-offset-3">
							<%= f.submit "Ingresar", class: "btn btn-danger"%>
							<button type="reset" class="btn btn-default">Limpiar Campos</button>
						</div>
                    <br />
                  <%end%>
				  
				</div>
                </div>
              
                <div class="widget-foot">
                  ¿No se ha registrado? <%= link_to "Regístese Aqui", "/signup" %>
			    </div>
            </div>  
      </div>
    </div>
  </div> 
</div>